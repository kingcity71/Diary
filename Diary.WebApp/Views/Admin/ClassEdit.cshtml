@using Diary.Models;
@model ClassModel;
@{
    ViewData["Title"] = "TeacherEdit";
}


<form asp-action="ClassEdit" method="post">
    @Html.HiddenFor(x => x.Id)


    <div class="row">
        @Html.LabelFor(x => x.Number, "Номер")
        @Html.TextBoxFor(x => x.Number, new { @class = "form-control", min="1", max="11", type="number" })
    </div>
    <div class="row">
        @Html.LabelFor(x => x.Letter, "Литера")
        @Html.TextBoxFor(x => x.Letter, new { @class = "form-control"})
    </div>

    <button type="submit" class="btn btn-success">Сохранить</button>
</form>
<script>
     if ('@ViewBag.IsInvalid' == 'True')
        alert('Проверьте валидность данных')
</script>